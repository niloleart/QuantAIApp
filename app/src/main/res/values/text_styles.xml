<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TEXT STYLE -->
    <style name="NormalText" parent="Roboto.Regular.M">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ParagraphBoldText" parent="Roboto.Black.S">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <string name="roboto_regular" translatable="false">sans-serif</string>
    <string name="roboto_light" translatable="false">sans-serif-light</string>
    <string name="roboto_black" translatable="false">sans-serif-black</string>
    <string name="roboto_medium" translatable="false">sans-serif-medium</string>

    <dimen name="text_size_xxs">11sp</dimen>
    <dimen name="text_size_xs">12sp</dimen>
    <dimen name="text_size_s">14sp</dimen>
    <dimen name="text_size_m">16sp</dimen>
    <dimen name="text_size_l">18sp</dimen>
    <dimen name="text_size_xl">20sp</dimen>
    <dimen name="text_size_xxl">22sp</dimen>

    <style name="Roboto" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Roboto.Regular">
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="Roboto.Light">
        <item name="android:fontFamily">@string/roboto_light</item>
    </style>

    <style name="Roboto.Black">
        <item name="android:fontFamily">@string/roboto_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Roboto.Medium">
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>


    <!-- Roboto Light -->
    <style name="Roboto.Light.XXS">
